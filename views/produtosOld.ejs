        }

        // Quantity controls
        function increaseQuantity() {
            const quantityInput = document.getElementById('quantity');
            quantityInput.value = parseInt(quantityInput.value) + 1;
			salvarQuantidade(quantityInput.value);
			let id_produto = <%= id_produto %>
			salvarProduto(id_produto, quantityInput.value);
        }

        function decreaseQuantity() {
            const quantityInput = document.getElementById('quantity');
            if (parseInt(quantityInput.value) > 1) {
                quantityInput.value = parseInt(quantityInput.value) - 1;
            }
			//salvarQuantidade(quantityInput.value);
			let id_produto = <%= id_produto %>
			salvarProduto(id_produto, quantityInput.value);
        }
		function salvarQuantidade(valor) {
			let id_produto = <%= id_produto %>
			let dados = id_produto +  valor;
			localStorage.setItem("quantidade", dados);
		}
		
		
		
		// Função para salvar no localStorage
		function salvarProduto(id_produto, qtde) {
		  // Tenta carregar o array existente
		  let produtos = JSON.parse(localStorage.getItem("produtos")) || [];

		  // Verifica se o produto já existe no array
		  const index = produtos.findIndex(p => p.id_produto === id_produto);

		  if (index !== -1) {
			// Se já existe, atualiza a quantidade
			produtos[index].qtde = qtde;
		  } else {
			// Se não existe, adiciona novo
			produtos.push({ id_produto, qtde });
		  }

		  // Salva de volta no localStorage
		  localStorage.setItem("produtos", JSON.stringify(produtos));
		}


        // Mobile menu toggle
